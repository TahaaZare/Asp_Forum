@using Forum.Domain.Models.Questions
@model List<QuestionCategory>

<div class="axil-categories-list axil-section-gap bg-color-grey">
    <div class="container">
        <div class="row align-items-center mb--30">
            <div class="col-lg-6 col-md-8 col-sm-8 col-12">
                <div class="section-title">
                    <h3 class="title text-right">دسته بندی </h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- Start List Wrapper  -->
                <div class="list-categories d-flex flex-wrap">
                    @foreach (var item in Model)
                    {
                        <!-- Start Single Category  -->
                        <a asp-controller="Home" asp-action="QuestionListByCategory" asp-route-categoryName="@item.Name">
                            <div class="single-cat">
                                <div class="inner">
                                    <div class="">
                                        <h5 class="title text-center my-2">@item.Name </h5>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <!-- End Single Category  -->
                    }
                </div>
                <!-- Start List Wrapper  -->
            </div>
        </div>
    </div>
</div>