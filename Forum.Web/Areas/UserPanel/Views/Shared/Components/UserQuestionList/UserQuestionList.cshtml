@model List<Forum.Domain.Models.Questions.Question>
@{
    var count = 0;
}
<div class="section mt-2">
    <div class="card">
        <div class="card-body">
            <div class="wide-block p-0">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">#</th>
                                    <th class="text-center" scope="col">عنوان سوال</th>
                                    <th class="text-center" scope="col">توضیح</th>
                                    <th class="text-center" scope="col">تنظیمات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@(count+=1)</th>
                                        <td class="text-center">@item.Title</td>
                                        <td class="text-center">
                                            @{
                                                string description = item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description;
                                            }
                                            @Html.Raw(description)
                                        </td>
                                        <td class="text-center">
                                            <a asp-area="UserPanel" asp-controller="Question" asp-action="EditQuestion" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        <p class="alert alert-info rounded text-center">
                            سوالی نپرسیدی !
                            <a asp-area="UserPanel" asp-controller="Question" asp-action="CreateQuestion" class="text-decoration-underline text-warning">ایجاد سوال جدید</a>
                        </p>
                    }

                </div>

            </div>
        </div>
    </div>
</div>