@model Forum.Domain.ViewModels.Question.Category.EditCategoryViewModel

@{
    ViewData["Title"] = $"ویرایش سوال : {Model.Name}";
    Layout = "_AdminLayout";
}
<div class="clearfix row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
            </div>
            <div class="body table-responsive">
                <form asp-area="AdminPanel" asp-controller="QuestionCategory" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id">
                    <div class="clearfix row">
                        <div class="col-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                </span>
                                <div class="form-line">
                                    <input type="text" asp-for="Name"
                                           class="form-control" placeholder="Name . . .">
                                </div>
                                <span asp-validation-for="Name" class="p-1 text-danger " role="alert">
                                </span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                </span>
                                <div class="form-line">
                                    <textarea type="text" asp-for="Description"
                                           class="form-control" placeholder="Description . . ."></textarea>
                                </div>
                                <span asp-validation-for="Description" class="p-1 text-danger" role="alert">
                                </span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts
{
    <partial name="_JqueryValidation"/>
}