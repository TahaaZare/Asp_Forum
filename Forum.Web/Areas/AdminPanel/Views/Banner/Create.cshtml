@model Forum.Domain.ViewModels.Content.Banner.CreateBannerViewModel
@{
    ViewData["Title"] = "افزودن بنر";
    Layout = "_AdminLayout";
}

<div class="clearfix row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
            </div>
            <div class="body table-responsive">
                <form asp-area="AdminPanel" asp-controller="Banner" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="clearfix row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-addon">
                                </span>
                                <div class="form-line">
                                    <input type="text" asp-for="Title"
                                           class="form-control" placeholder="Title . . .">
                                </div>
                                <span asp-validation-for="Title" class="p-1 text-danger " role="alert">
                                </span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-addon">
                                </span>
                                <div class="form-line">
                                    <input type="text" asp-for="Url"
                                           class="form-control" placeholder="Url . . .">
                                </div>
                                <span asp-validation-for="Url" class="p-1 text-danger" role="alert">
                                </span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                </span>
                                <div class="form-line">
                                    <input type="file" asp-for="Image" accept=".jpg ,.jpeg ,.png,.webp"
                                           class="form-control">
                                </div>
                                <span asp-validation-for="Image" class="p-1 text-danger" role="alert">
                                </span>
                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts
{
    <partial name="_JqueryValidation"/>
}